<h1>Editing forum</h1>

<%= error_messages_for :forum %>
 
<% form_for [:admin, @forum], :url => { :action => "update" }  do |f| %>
  <p>
  <%= render :partial => 'fields', :locals => { :f => f } %>
  </p>
  <p>
  <b>Description</b><br />
  <%= f.text_area :description %>
  </p>

  <p>
  <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', admin_forums_path %>
